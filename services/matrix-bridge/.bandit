# Bandit Security Scanning Configuration for Matrix Bridge

[bandit]

# Test selection
tests = ["B101", "B102", "B103", "B104", "B105", "B106", "B107", "B108", "B110", 
         "B112", "B201", "B301", "B302", "B303", "B304", "B305", "B306", "B307", 
         "B308", "B309", "B310", "B311", "B312", "B313", "B314", "B315", "B316", 
         "B317", "B318", "B319", "B320", "B321", "B322", "B323", "B324", "B325", 
         "B401", "B402", "B403", "B404", "B405", "B406", "B407", "B408", "B409", 
         "B410", "B411", "B412", "B413", "B501", "B502", "B503", "B504", "B505", 
         "B506", "B507", "B601", "B602", "B603", "B604", "B605", "B606", "B607", 
         "B608", "B609", "B610", "B611", "B701", "B702", "B703"]

# Skip tests - only skip if absolutely necessary with justification
skips = []

# Exclude patterns
exclude_dirs = ["tests/fixtures", ".git", "__pycache__", "*.egg-info"]

# Confidence levels: HIGH, MEDIUM, LOW
confidence = "HIGH"

# Severity levels: HIGH, MEDIUM, LOW  
severity = "HIGH"

# Report format
format = "json"

# Additional configurations for security-critical code
[bandit.assert_used]
# We use asserts in security-critical validation
skips = ["*"]

[bandit.hardcoded_password_string]
# String patterns that might look like passwords but aren't
word_list = ["password", "pass", "passwd", "token", "secret", "key"]

[bandit.hardcoded_password_funcarg]
# Function argument names that might look like passwords
word_list = ["password", "pass", "passwd", "token", "secret", "key"]

[bandit.hardcoded_password_default]
# Default argument names that might look like passwords
word_list = ["password", "pass", "passwd", "token", "secret", "key"]