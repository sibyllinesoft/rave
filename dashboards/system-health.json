{
  "dashboard": {
    "id": null,
    "title": "RAVE System Health Dashboard",
    "description": "P2.3 System Health monitoring with infrastructure metrics and service dependencies",
    "tags": ["rave", "system", "health", "infrastructure", "p2"],
    "timezone": "browser", 
    "refresh": "30s",
    "schemaVersion": 36,
    "version": 1,
    "time": {
      "from": "now-2h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up",
            "refId": "A",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "value": "0",
                "text": "DOWN",
                "color": "red"
              },
              {
                "type": "value",
                "value": "1", 
                "text": "UP",
                "color": "green"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "CPU Usage by Core",
        "type": "timeseries",
        "targets": [
          {
            "expr": "100 - (avg by (cpu) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "refId": "A",
            "legendFormat": "CPU {{cpu}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 3,
        "title": "Memory Usage Details",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_memory_MemTotal_bytes",
            "refId": "A",
            "legendFormat": "Total Memory"
          },
          {
            "expr": "node_memory_MemUsed_bytes",
            "refId": "B",
            "legendFormat": "Used Memory"
          },
          {
            "expr": "node_memory_MemAvailable_bytes",
            "refId": "C",
            "legendFormat": "Available Memory"
          },
          {
            "expr": "node_memory_Cached_bytes + node_memory_Buffers_bytes",
            "refId": "D",
            "legendFormat": "Cache + Buffers"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        }
      },
      {
        "id": 4,
        "title": "Disk I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_disk_read_bytes_total[5m])",
            "refId": "A",
            "legendFormat": "Read {{device}}"
          },
          {
            "expr": "rate(node_disk_written_bytes_total[5m])",
            "refId": "B",
            "legendFormat": "Write {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 5,
        "title": "Network I/O",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(node_network_receive_bytes_total{device!=\"lo\"}[5m])",
            "refId": "A",
            "legendFormat": "RX {{device}}"
          },
          {
            "expr": "rate(node_network_transmit_bytes_total{device!=\"lo\"}[5m])",
            "refId": "B",
            "legendFormat": "TX {{device}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "binBps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 6,
        "title": "Service Resource Usage",
        "type": "table",
        "targets": [
          {
            "expr": "process_resident_memory_bytes",
            "refId": "A",
            "format": "table",
            "legendFormat": "{{job}}"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "job": {
                  "aggregations": [],
                  "operation": "groupby"
                },
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                }
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Value (lastNotNull)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "bytes"
                },
                {
                  "id": "displayName",
                  "value": "Memory Usage"
                }
              ]
            }
          ]
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 7,
        "title": "Filesystem Usage", 
        "type": "timeseries",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
            "refId": "A",
            "legendFormat": "{{mountpoint}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "red",
                  "value": 85
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 8,
        "title": "System Load Average",
        "type": "timeseries",
        "targets": [
          {
            "expr": "node_load1",
            "refId": "A",
            "legendFormat": "1m load avg"
          },
          {
            "expr": "node_load5", 
            "refId": "B",
            "legendFormat": "5m load avg"
          },
          {
            "expr": "node_load15",
            "refId": "C",
            "legendFormat": "15m load avg"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "Service Uptime",
        "type": "table",
        "targets": [
          {
            "expr": "time() - process_start_time_seconds",
            "refId": "A",
            "format": "table",
            "legendFormat": "{{job}}"
          }
        ],
        "transformations": [
          {
            "id": "groupBy",
            "options": {
              "fields": {
                "job": {
                  "aggregations": [],
                  "operation": "groupby"
                },
                "Value": {
                  "aggregations": ["lastNotNull"],
                  "operation": "aggregate"
                }
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {
                "id": "byName", 
                "options": "Value (lastNotNull)"
              },
              "properties": [
                {
                  "id": "unit",
                  "value": "s"
                },
                {
                  "id": "displayName",
                  "value": "Uptime"
                }
              ]
            }
          ]
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 10,
        "title": "Open File Descriptors",
        "type": "timeseries",
        "targets": [
          {
            "expr": "process_open_fds",
            "refId": "A",
            "legendFormat": "{{job}}"
          },
          {
            "expr": "process_max_fds",
            "refId": "B",
            "legendFormat": "{{job}} Max"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 36
        }
      },
      {
        "id": 11,
        "title": "Database Connections (PostgreSQL)",
        "type": "timeseries",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "refId": "A",
            "legendFormat": "{{datname}} connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 42
        }
      }
    ],
    "annotations": {
      "list": [
        {
          "name": "System Alerts",
          "datasource": "Prometheus", 
          "expr": "ALERTS{severity=\"critical\"}",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{summary}} - {{description}}",
          "iconColor": "red"
        },
        {
          "name": "High Resource Usage",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~\"HighMemoryUsage|HighCPUUsage|DiskSpaceLow\"}",
          "titleFormat": "Resource Alert: {{alertname}}",
          "textFormat": "{{instance}}: {{description}}",
          "iconColor": "orange"
        }
      ]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up, instance)",
          "refresh": 1,
          "multi": false,
          "includeAll": false
        }
      ]
    }
  },
  "overwrite": true
}