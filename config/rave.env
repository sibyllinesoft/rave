# Shared configuration for RAVE VM tooling
# Ports and credentials are centralized here to avoid duplication across scripts.

# VM Connectivity
export VM_HOST="localhost"
export VM_SSH_PORT="2224"
export VM_HTTP_PORT="8080"
export VM_HTTPS_PORT="8443"

# Credentials (consider replacing password auth with SSH keys in production)
export VM_USER="root"
export VM_PASS="debug123"

# Timing controls
export MAX_RETRIES=20
export SLEEP_INTERVAL=15

# Derived URLs
export BASE_URL="https://${VM_HOST}:${VM_HTTPS_PORT}"
